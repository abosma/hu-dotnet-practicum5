<Page x:Class="WPFGUI.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBox Name="UsernameTextbox" HorizontalAlignment="Left" Height="23" Margin="81,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="PasswordTextbox" HorizontalAlignment="Left" Height="23" Margin="81,83,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Click="Login" Content="Login" HorizontalAlignment="Left" Margin="56,143,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="9,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="9,83,0,0" VerticalAlignment="Top"/>
        <Label Name="StatusText" HorizontalAlignment="Left" Margin="121,111,0,0" VerticalAlignment="Top" Foreground="Red"/>
        <Button Click="GotoRegister" Content="Register" HorizontalAlignment="Left" Margin="153,143,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Page>
